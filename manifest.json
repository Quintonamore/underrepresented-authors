{
  "name": "BIPOC Authors",
  "description": "Find books from under-represented authors",
  "version": "1.0",
  "manifest_version": 3,
  
  //added this
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],


  "background": {
    "service-worker": "background.js"
  },

  "permissions": ["storage", "scripting"],

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "BIPOC Authors", //to change
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  }, 
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }

}