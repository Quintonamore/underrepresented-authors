{
  "name": "BIPOC Authors",
  "description": "Find books from under-represented authors",
  "version": "1.0",
  "manifest_version": 3,
  
  //added this
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],


  "background": {
    "service-worker": "background.js"
  },

  //changed to have more
  "permissions": ["storage", "scripting", "tabs", "contextMenus", "activeTab"],


  "browser_action": {
    "default_popup": "index.html",
    "default_title": "BIPOC Authors", //to change
    "default_icon": "icon128.png"
  }, 

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

}